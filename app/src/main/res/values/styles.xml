<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultDateStyle">
        <item name="android:textColor">#000000</item> <!-- Цвет текста даты -->
        <item name="android:textSize">14sp</item> <!-- Размер шрифта -->
        <item name="android:textStyle">bold</item> <!-- Стиль шрифта -->
    </style>
    <style name="BoldButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MedicalExamDateStyle" parent="DefaultDateStyle">
        <item name="android:textColor">#00FF00</item> <!-- Зеленый цвет текста даты -->
    </style>


    <style name="CallUpDateStyle" parent="DefaultDateStyle">
        <item name="android:textColor">#FF0000</item> <!-- Красный цвет текста даты -->
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/red</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="red">#FF1100</color>
</resources>